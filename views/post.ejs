<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title></title>
    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <style type="text/css">
        .recommendationheader {
            padding: 2px;
            cursor: pointer;
        }

        #postDiv {
            margin: 30px auto;
        }

        span {
            margin: 10px auto;
        }

        table {
            border-collapse: collapse;
        }

        table, th, td {
            border: 1px solid black;
        }

        .content {
            display: none;
            height: 200px;
            overflow: scroll;
        }

        h2 {
            font-weight: bold;
            text-align: center;
        }


    </style>
</head>
<body>
<div class="container">


    <div class="row">
        <% function beautifyOutput(input) {
            var stringInput = input.replace("\"", "").replace("\\", "")
            stringInput = stringInput.substr(0, stringInput.length - 2)
            return stringInput;
        } for (var i = 0; i < posts.length; i++) { %>
        <table id="contentTable" class="table table-striped">
            <table style=" width: 100%; margin:0 auto;">
                <tr>
                <tr>
                    <%= beautifyOutput(posts[i].title) %>
                </tr>

                </tr>
            </table>
        </table>
        <% } %>
    </div>

    <% if (pages > 0) { %>
    <ul class="pagination text-center">
        <% if (current == 1) { %>
        <li class="disabled"><a>First</a></li>
        <% } else { %>
        <li><a href="/post/1">First</a></li>
        <% } %>
        <% i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
        <% if (i !== 1) { %>
        <li class="disabled"><a>...</a></li>
        <% } %>
        <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
        <% if (i == current) { %>
        <li class="active"><a><%= i %></a></li>
        <% } else { %>
        <li><a href="/post/<%= i %>"><%= i %></a></li>
        <% } %>
        <% if (i == Number(current) + 4 && i < pages) { %>
        <li class="disabled"><a>...</a></li>
        <% } %>
        <% } %>
        <% if (current == pages) { %>
        <li class="disabled"><a>Last</a></li>
        <% } else { %>
        <li><a href="/post/<%= pages %>">Last</a></li>
        <% } %>
    </ul>
    <% } %>
</div>
</body>
</html>