    <link rel="stylesheet" href="/css/bootstrap-multiselect.css" type="text/css">
    <style>
        body {
            padding-top: 100px;
        }
    </style>
</head>
<body>
<script type="text/javascript">
    $(document).ready(function() {
        $('#boot-multiselect-demo').multiselect({
            includeSelectAllOption: true,
            buttonWidth: 540,
            enableFiltering: true
        });
    });
</script>




<script>

</script>


<div class="container">
    <div class="col-sm-6 col-sm-offset-3">
        <h1><span class="fa"></span>Sign-up</h1><br>
        <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
        <% } %>
        <form action="/sign-up" method="post">
            <div class="form-group">
                <label>Username</label>
                <input type="text" class="form-control" name="username">
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="password" class="form-control" name="password">
            </div>

            <div class="form-group">
            <label>Select Tags</label>
                <br>

            <select id="boot-multiselect-demo" multiple="multiple" class="form-control">
            </select>
                <script>
                    var data=<%-available_tags%>;
                    var sel = document.getElementById('boot-multiselect-demo');
                    for(var i = 0; i < data.length/200; i++) {
                        var opt = document.createElement('option');
                        opt.innerHTML = data[i];
                        opt.value = data[i];
                        sel.appendChild(opt);
                    }
                    function getTags() {
                        var allVal=$("#boot-multiselect-demo").val();
                    }
                </script>
            </div>

                <label for="inputlg">What Describes you?</label>
                <textarea class="form-control" rows="5" id="comment"></textarea>



            <div class="col-md-4 text-center col-sm-offset-4" style="margin-top: 30px">

            <button type="submit" class="btn btn-default btn-lg" onclick="getTags()" >Sign Up</button>
            <br>
            <br>
            </div>
            <div style="margin-top: 100px;margin-left: 170px">
                <p>Already have an account? <a href="/login">Login</a></p>
                <p style="margin-left: 20px">Click <a href="/">here</a> to start again</p>
            </div>

    </form>
    </div>
</div>
</body>
</html>
